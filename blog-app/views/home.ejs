<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>

    <%- include('./partials/head') %>
</head>
<body>
    <%- include('./partials/nav') %>
     
    <div class="container mt-3">
        <div class="row row-cols-3">
            <% blogs.forEach(blog => { %>
                <div class="col">
                    <div class="card col" style="width: 18rem; margin-bottom: 1rem;">
                        <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Blog Image">
                        <div class="card-body">
                            <h5 class="card-title"><%= blog.title %></h5>
                            <p class="card-text"><%= blog.body.substring(0, 100) %>...</p> <!-- Optional snippet -->
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    
    
    <%- include('./partials/scripts') %>
    
</body>
</html>